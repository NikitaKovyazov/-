body {
	margin: 0; 
	font-family: 'Montserrat', sans-serif;
	font-size: 15px;
	line-height: 1.6;
	color: #0f2344;
	margin: auto;
	background: #d6e5ff;
	
}

*,
*:before,
*:after {
	box-sizing: border-box;
}

.container {
	width: 100%;
	max-width: 1200px;
	margin: 0 auto;
}

.column{
	float: left;
	width: 25%
}

.row:after{
	content: "";
	display: table;
	clear: both;
}

.title_prof{
	color: #fff;
}

.grid_prof {
      /*подключаем сетку*/
      display: grid;
	  grid-template-columns: 470px 470px;
	  grid-template-rows: 100px 100px  100px  100px ;
	  height: -100px;
	  color: #fff;
	 
    } 

    /*внешний вид ячеек*/
    .grid_prof > * {
      /*фоновый цвет*/
      background-color: #324669;
	  color: #fff;
      /*скругление углов*/
      border-radius: 10px;
      /*отступ от содержимого до края ячейки*/
      padding: 10px;
      /*расстояние от одной границы ячейки до другой*/
      margin: 1px;
	  
    }
	

.intro {
	display: flex;
	flex-direction: column;
	justify-content: center;
	width: 100%;
	height: 100vh;
	background: url("../images/intro.jpg")
	center no-repeat;
	-webkit-background-size: cover;
	background-size: cover;
}

.intro__title{
	font-size: 130px;
	font_weight: 700;
	text-transform: uppercase;
	text-align: center;
	line-height: 1;
	color: #0f2344;

}




.intro__inner{
	width: 100%;
	max-width: 880px;
	margin: 0 auto;
	text-align: center;
}

.intro__suptitle{
	font-size: 24px;
	color: #fff;
	font-family: 'Kaushan Script', cursive;
	text-align: center;
}

.header{
	width: 100%;
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	z-index: 1000;
	padding-top: 30px;
	
}
	

.header__logo{
	font-size: 30px;
	font-weight: 700;
	color: #0f2344;
}

.header__inner{
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.nav{
	font-size: 14px;
	text-transform: uppercase;
}

.nav__link{
	display: inline-block;
	vertical-align: top;
	margin: 0 12px;
	font-weight: 700;
	
	
	color: #0f2344;
	text-decoration: none;
	
	transition: color .2s linear;
	
}

.nav__link:hover{
	color: #fff;
}

.btn {
	display: inline-block;
	vertical-align: top;
	padding: 10px 15px;
	
	
	
	border: 3px solid #0f2344;
	
	font-size: 14px;
	font-weight: 700;
	color: #0f2344;
	text-transform: uppercase;
	text-decoration: none;
	
	transition: background .1s linear,
	color .1s linear;
}

.btn_prof {
	display: inline-block;
	vertical-align: top;
	padding: 10px 15px;
	
	
	
	border: 3px solid #0f2344;
	
	font-size: 14px;
	font-weight: 700;
	color: #fff;
	text-transform: uppercase;
	text-decoration: none;
	
	transition: background .1s linear,
	color .1s linear;
}

#window{
	width: 350px;
	height: 530px;
	margin: 40px auto;
	background: #fff;
	border: 1px solid #fff;
	border-radius: 15px;
	z-index: 150;
	display: none;
	position: fixed;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
}

.gray{
	opacity: 0.8;
	padding: 15px;
	background-color: rgba(1,1,1,0.75);
	position: fixed;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	display: none;
	z-index: 100;
	overflow: auto;
	
}

.form{
	width: 275px;
	margin: -20px auto 20px auto;
	text-align: center;
	
}

.input{
	width: 260px;
	padding: 5px;
	margin-bottom: 10px;
}

.close{
	margin: 15px 0 0 300px;
	cursor: pointer;
	padding: 5px;
	
	
}

.close:hover{
	background: #d6e5ff;
	
}

.btn:hover{
	background-color: #0f2344;
	color: #fff;
}

.slider{
	width: 100%;
	
	position:absolute;
	bottom: 0;
	left: 0;
	z-index: 1;
}

.slider__inner{
	display: flex;
	justify-content: space-between;
}

.slider__item{
	width: 23%;
	padding: 20px 0;
	position: relative;
	
	border-top: 3px solid #fff;
	opacity: .7;
	
	font-size: 18px;
	color: #fff;
	text-transform: uppercase;
}

.slider__item.active{
	opacity: 1;
}

.slider__item:before{
	content: "";
	display: block;
	width: 70px;
	height: 3px;
	
	background-color: #324669;
	
	position: absolute;
	top: -3px;
	left: 0;
	z-index: 1;
}

.slider__num{
	font-size: 24px;
	font-weight: 700;
}
	

.section{
	padding: 80px, 0;
}

.section__header{
	width: 100%;
	max-width: 950px;
	margin: 0 auto 40px;
	
	text-align: center;
}

.section__title{
	font-size: 30px;
	font_weight: 700;
	color: #333;
	text-transform: uppercase;
	

}

